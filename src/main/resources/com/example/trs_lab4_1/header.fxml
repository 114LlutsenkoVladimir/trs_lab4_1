<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trs_lab4_1.controller.HeaderController"
      fx:id="root"
      spacing="10"
      style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;">

    <padding>
        <Insets top="8" right="12" bottom="8" left="12"/>
    </padding>

    <Label text="TRS Lab 4"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Pane HBox.hgrow="ALWAYS"/>

    <Button text="Параметри"        onAction="#openParameters"/>
    <Button text="Групи продуктів"  onAction="#openProductGroups"/>
    <Button text="Продукти"         onAction="#openProducts"/>

</HBox>
